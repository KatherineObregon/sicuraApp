<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SicuraApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_logo_letras_transparente_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mdcTheme">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="btnCircularTheme">
        <item name="cornerSize">50dp</item>
        <item name="cornerFamily">cut</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.SicuraApp">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>
    <style name="launcher2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher_screen2</item>
    </style>

    <style name="boton_blanco" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F5F5F6</item>
        <item name="colorPrimaryVariant">#F5F5F6</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="shapeAppearance">@style/mdcTheme</item>

    </style>

    <style name="vista_clara" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_logo_letras_transparente_background</item>
        <item name="colorPrimaryVariant">#FFD21F</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearance">@style/mdcTheme</item>
    </style>

    <style name="home" parent="Theme.SicuraApp">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>


    <style name="boton_indigo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_logo_letras_transparente_background</item>
        <item name="colorPrimaryVariant">#FFD21F</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearance">@style/mdcTheme</item>
    </style>

    <style name="boton_circulo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C6C4E8</item>
        <item name="colorPrimaryVariant">#FFD21F</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearance">@style/btnCircularTheme</item>
    </style>

    <style name="roundedImage" parent="Theme.SicuraApp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>